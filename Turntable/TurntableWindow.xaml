<Window x:Class="Turntable.TurntableWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Turntable"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="TurntableWindow">

    <Grid>
        <Canvas x:Name="myCanvas" Width="400" Height="400" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20">
            <Canvas.RenderTransform>
                <RotateTransform x:Name="rotateTransform" CenterX="300" CenterY="250" />
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</Window>
